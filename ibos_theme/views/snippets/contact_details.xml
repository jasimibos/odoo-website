<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="contact_details_path" inherit_id="website.snippets" name="Contact Details">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="ibos_theme.contact_details"/>
        </xpath>
    </template>

    <template id="contact_details" name="Contact Details">
        <!-- section insta starts here -->
       <section class="contact-details border-bottom">
            <div class="container">
                <div class="row justify-content-around">
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="call text-center border-right">
                            <h6>Call anytime</h6>
                            <a href="tel:+880123456789">+880123456789</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="email text-center border-right">
                            <h6>Email us </h6>
                            <a href="mailto:info@ibos.io">info@ibos.io </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="skype text-center">
                            <h6>Skype</h6>
                            <a href="#">Droggol</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- section insta ends here -->
    </template>
</odoo>